@page
@model Iportfolio.Pages.Admin.ShowFactsModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-10 justify-content-center">
        <h2>Show Facts Page</h2>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Happy Clients</th>
                    <th scope="col">Projects</th>
                    <th scope="col">Hours of Support</th>
                    <th scope="col">Hard Workers</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.facts)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.HappyClient</td>
                        <td>@item.Projects</td>
                        <td>@item.HoursOfSupport</td>
                        <td>@item.HardWorkers</td>
                        <td>
                            <a asp-page-handler="Update" asp-page="UpdateFacts" asp-route-id="@item.Id" class="btn btn-success">Update</a>

                        </td>
                        <td>
                            <a asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>