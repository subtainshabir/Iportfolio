@page
@model Iportfolio.Pages.Admin.ShowSocialModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-10 justify-content-center">
        <h2>Social Network Record</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Facebook</th>
                    <th scope="col">Instagram</th>
                    <th scope="col">Skype</th>
                    <th scope="col">LinkdIn</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.social)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Facebook</td>
                        <td>@item.Instagram</td>
                        <td>@item.Skype</td>
                        <td>@item.LinkdIn</td>
                        <td>
                            <a class="btn btn-success" asp-page="UpdateSocial" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
