@page
@model Iportfolio.Pages.Admin.ShowEducationModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-10 justify-content-center">
        <h2>Education Record</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Degree Title</th>
                    <th scope="col">Start Year</th>
                    <th scope="col">End Year</th>
                    <th scope="col">Description</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.education)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.DegreeTitle</td>
                        <td>@item.StartClass</td>
                        <td>@item.EndClass</td>
                        <td>@item.InstituteName</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-success" asp-page="UpdateEducation" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                   </tr>
                }
            </tbody>
        </table>
    </div>
</div>
