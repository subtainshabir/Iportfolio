@page
@model Iportfolio.Pages.Admin.ShowServicesModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-10 justify-content-center">
        <h2>Services Record</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Service Title</th>
                    <th scope="col">Description</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.services)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.ServiceTitle</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-success"   asp-page="UpdateService" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>