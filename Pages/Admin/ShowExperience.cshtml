@page
@model ShowExperienceModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-10 justify-content-center">
        <h2>Show Experience</h2>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Job Title</th>
                    <th scope="col">Start Year</th>
                    <th scope="col">End Year</th>
                    <th scope="col">Description</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.experience)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.StartYear</td>
                        <td>@item.EndYear</td>
                        <td>@item.Desc</td>
                        <td>
                            <a class="btn btn-success" asp-page="Update Experience" asp-route-id="@item.Id">Update</a>
                            
                        </td>
                        <td>
                            <a asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            
                        </td>
                    </tr>

                }
                
            </tbody>
        </table>
    </div>
</div>